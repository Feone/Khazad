<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nifty>
	<useStyles filename="nifty-default-styles.xml"/>
	<useControls filename="nifty-default-controls.xml"/>
	<screen id="GameScreen" controller="Nifty.GameScreenController">
		<layer childLayout="vertical" id="layer0">
			<panel childLayout="horizontal" height="40px" id="TopPanel" width="100%" x="568" y="250" >
				<panel childLayout="horizontal" id="TopLeftPanel" style="nifty-panel-simple" width="150px" >
					<control childLayout="center" height="100%" id="button0" label="Menu" name="button" width="50px" controller="Nifty.GameScreenController">
						<interact onClick="Menu()"/>
					</control>
				</panel>
				<panel childLayout="center" id="TopDummyOne">
					<panel childLayout="center" height="100%" id="TopDummyTwo" width="100%">
						<panel childLayout="horizontal" height="100%" id="TopMiddlePanel" style="nifty-panel-simple" width="200px" x="297" y="27"/>
					</panel>
				</panel>
				<panel childLayout="horizontal" id="TopRightPanel" style="nifty-panel-simple" width="290px">
					<control childLayout="center" height="100%" id="Pausebutton" label="Pause" name="button" width="50px" controller="Nifty.GameScreenController">
						<interact onClick="Pause()"/>
					</control>
					<control childLayout="center" height="100%" id="Speed1button" label="x1" name="button" width="30px" controller="Nifty.GameScreenController">
						<interact onClick="SetSpeed(1)"/>
					</control>
					<control childLayout="center" height="100%" id="Speed4button" label="x4" name="button" width="30px" controller="Nifty.GameScreenController">
						<interact onClick="SetSpeed(4)"/>
					</control>
					<control childLayout="center" height="100%" id="Speed16button" label="x16" name="button" width="30px" controller="Nifty.GameScreenController">
						<interact onClick="SetSpeed(16)"/>
					</control>
					<control childLayout="center" height="100%" id="Speed64button" label="x64" name="button" width="40px" controller="Nifty.GameScreenController">
						<interact onClick="SetSpeed(256)"/>
					</control>
					<control childLayout="center" height="100%" id="Speed64button" label="x1024" name="button" width="50px" controller="Nifty.GameScreenController">
						<interact onClick="SetSpeed(1024)"/>
					</control>
					<control childLayout="center" height="100%" id="Speed64button" label="x4096" name="button" width="50px" controller="Nifty.GameScreenController">
						<interact onClick="SetSpeed(4096)"/>
					</control>
				</panel>
			</panel>
			<panel childLayout="horizontal" id="MiddlePanel" align="right">
				<control name="verticalScrollbar" height="100%" width="50px" id="DepthSlider" worldMax="1000.0" worldPageSize="100.0" initial="10.0" buttonStepSize="10.0" pageStepSize="100.0"/>				
			</panel>
			<panel childLayout="horizontal" height="150px" id="BottomPanel" width="100%">
				<panel childLayout="absolute" height="100%" id="BottomLeftPanel" style="nifty-panel-simple" width="150px" visibleToMouse="true"/>
				<panel childLayout="vertical" height="100%" id="BottomMiddlePanel">
					<panel childLayout="vertical" id="panel6" width="100%" x="319" y="86">
						<panel childLayout="absolute" id="panel18" width="100%"/>
						<panel childLayout="center" height="40px" id="panel23" width="100%">
							<panel childLayout="horizontal" height="100%" id="BottomButtonPanel" style="nifty-panel-simple" width="200px" controller="Nifty.GameBottomBarController">
								<control childLayout="center" height="100%" id="DiGButton" label="Dig" name="button" width="40px">
									<interact onClick="ButtonPress()"/>
								</control>
								<control childLayout="center" height="100%" id="BuildButton" label="Build" name="button" width="40px">
									<interact onClick="ButtonPress()"/>				
								</control>
							</panel>
						</panel>
					</panel>
					<panel childLayout="absolute" height="40px" id="BottomMiddleBottomPanel" style="nifty-panel-simple" width="100%"/>
				</panel>
				<panel childLayout="absolute" height="100%" id="BottomRightPanel" style="nifty-panel-simple" width="150px" visibleToMouse="true"/>
			</panel>
		</layer>
	</screen>
	<popup id="MenuPopup" childLayout="center" controller="Nifty.GameScreenController" backgroundColor="#000a">
		<interact onClick="closePopup()" onSecondaryClick="closePopup()" onTertiaryClick="closePopup()" />		
		<panel alighn="center" align="center" childLayout="vertical" height="300px" id="MenuPanel" style="nifty-panel-simple" width="200px">
			<panel alighn="center" align="center" childLayout="center" height="100px" id="QuitPanel" width="100%">
				<control childLayout="center" height="50px" id="Savebutton" label="Save Game" name="button" width="150px" controller="Nifty.GameScreenController">
					<interact onClick="Save()"/>
				</control>
			</panel>
			<panel alighn="center" align="center" childLayout="center" height="100px" id="QuitPanel" width="100%">
				<control childLayout="center" height="50px" id="Abandonbutton" label="Abandon Game" name="button" width="150px" controller="Nifty.GameScreenController">
					<interact onClick="Abandon()"/>
				</control>
			</panel>
			<panel alighn="center" align="center" childLayout="center" height="100px" id="QuitPanel" width="100%">
				<control childLayout="center" height="50px" id="Quitbutton" label="Quit to Desktop" name="button" width="150px" controller="Nifty.GameScreenController">
					<interact onClick="Quit()"/>
				</control>
			</panel>
		</panel>
	</popup>
</nifty>
